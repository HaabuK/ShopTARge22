@model ShopTARge22.Models.Accounts.AddPasswordViewModel
    <div class="taust">
        <h2>Add Password</h2>
        <hr />
        <p class="text">
            You have used an external account to login and do not have local account details.
            To use a local account, simply set a password and use your email as username.
        </p>
        <div class="row">
            <div class="col-md-12">
                <form method="post"  asp-action="AddPassword">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Set Password
                    </button>
                </form>
            </div>
        </div>
    </div>