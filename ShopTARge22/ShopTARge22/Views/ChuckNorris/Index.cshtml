@model ShopTARge22.Models.Norris.SearchCategoryViewModel



<h1>Search for a joke</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search for a joke category</h2>
                <label asp-for="categories" style="font-family: Arial"></label>
                <input asp-for="categories" class="form-control" />
                <span asp-validation-for="categories" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="ChuckNorris" asp-action="SearchCategory" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>